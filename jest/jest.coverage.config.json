{
  "coverageConfig": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "*/*.{js,ts}",
      "!**/node_modules/**",
      "!**/jest/**",
      "!**/coverage/**",
      "!**/examples/**",
      "!**/dist/**",
      "!**/main.ts",
      "!**/*.d.ts",
      "!*.config.{js,ts}"
    ],
    "coverageReporters": [
      "clover",
      "json",
      "lcov",
      "json-summary",
      "html",
      [
        "text",
        {
          "skipFull": true
        }
      ]
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageThreshold": {
      "global": {
        "lines": 38.93,
        "statements": 40.76,
        "functions": 16.66,
        "branches": 11.47,
        "branchesTrue": 100
      }
    },
    "globalTeardown": "./jest/jest.teardown.config.ts"
  }
}