{
  "compilerOptions": {
    "target": "es2017",
    "types": [
      "node",
      "jest"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@constants": [
        "src/constants"
      ],
      "@scripts": [
        "scripts/index"
      ],
      "@utils": [
        "src/utils/index"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src",
    "scripts",
    "*.ts",
    "**/__tests__/*.spec.ts",
    "jest"
  ],
  "exclude": [
    "node_modules"
  ]
}
